# Copy this file to .env.local and fill in your own values.
# Never commit .env.local — it contains real secrets.

# Groq API key — https://console.groq.com/keys
GROQ_API_KEY=gsk_REPLACE_ME

# MongoDB Atlas connection string — https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<user>:<password>@cluster0.xxxxx.mongodb.net/proposal-builder?retryWrites=true&w=majority&appName=Cluster0

# Base URL of the app (no trailing slash)
# Local development:
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Production example:
# NEXT_PUBLIC_APP_URL=https://your-domain.vercel.app

# Clerk authentication — https://dashboard.clerk.com
# Create a new application, enable Google sign-in, then copy the keys.
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_REPLACE_ME
CLERK_SECRET_KEY=sk_test_REPLACE_ME

# Clerk redirect URLs (keep these as-is unless you change routing)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/builder
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/builder

# Email allowlist — comma-separated list of Gmail addresses allowed to access the app.
# Leave empty to allow any authenticated user.
ALLOWED_EMAILS="user1@gmail.com","user2@gmail.com"
